@import "../../../style/_variables.styl"
@import "../../../style/_mixins.index.styl"

.sign-up
  padding-left: 50px
  padding-right: 50px

.sign-up__login
  position: relative
  padding-top: 50px
  display: flex
  justify-content: center

  &::before
    content: ""
    position: absolute
    top: 0
    left: 85px
    height: 2px
    width: 830px
    background-color: #ededed

.sign-up__login-text
  display: inline-block
  font-weight: 600
  vertical-align: middle
  font-size: 16px
  line-height: (19 / 16)

.sign-up__link
  display: inline-block
  padding-left: 5px
  font-weight: 600
  vertical-align: middle
  font-size: 16px
  line-height: (19 / 16)
  text-transform: uppercase
  color: blue
  text-decoration: none

.sign-up__switch
  display: flex
  flex-wrap: wrap
  flex-direction: row
  justify-content: center
  margin-bottom: 40px

.sign-up__radio-button-wrapper
  margin-right: 150px

  &:last-child
    margin-right: 0

.sign-up__radio-button-label
  position: relative
  padding-left: 60px
  color: blue
  font-size: 18px
  line-height: (21 / 18)
  font-weight: 600
  text-align: center

  &::before
    content: ""
    position: absolute
    top: 0
    left: 0
    width: 20px
    height: 20px
    border: 2px solid blue
    border-radius: 50%

  &::after
    content: ""
    position: absolute
    top: 5px
    left: 5px
    width: 10px
    height: 10px
    border-radius: 50%

.sign-up__radio-button-label--active
  &::after
    background-color: blue

.sign-up__radio-button
  visually-hidden()