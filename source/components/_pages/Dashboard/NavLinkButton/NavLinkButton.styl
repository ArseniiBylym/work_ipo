.NavLinkButton {

    display: none
    position: absolute;
    top: 50px;
    left: 50px
    &.hide{
        display: none
    }    

    &.show {
        display: block

        .NavLinkButton__button{
            width: 30px
            height: 20px
            display: flex
            flex-flow: column nowrap
            justify-content: space-evenly    

            .NavLinkButton__button--line{
                width: 100%
                height: 2px
                background-color: rgba(0,0,0,.5)
            }
        }
    }
}

@media screen and (max-width: 900px) {
    .NavLinkButton {
        display: block
    }    
}

