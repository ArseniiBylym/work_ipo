
@media screen and (max-width 1210px) {
  .sidebar {
    margin-top: 100px
    overflow-y: hidden
  } 
  .dash-main {
    margin-top: 180px
  }
}  

@media screen and (max-width: 1024) {
    .sidebar{
        overflow-y: hidden
    }
}

@media screen and (max-width: 900px) and (orientation: landscape){
    .sidebar{
        display: none
    }
    .dash-main{
        margin-top:89px
    }
}

